<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiAppToolkit"
    >

    <!-- Debug purpose StrokeThickness"  Value="1" -->
    <Style x:Key="BorderStyleBlue" TargetType="Border">
        <Setter Property="Stroke" Value="#0000FF" />
        <Setter Property="StrokeThickness"  Value="0" />
        <Setter Property="BackgroundColor" Value="White" />
    </Style>
    <Style x:Key="BorderStyleRed" TargetType="Border">
        <Setter Property="Stroke" Value="#FF0000" />
        <Setter Property="StrokeThickness"  Value="0" />
        <Setter Property="BackgroundColor" Value="White" />
    </Style>
    <Style x:Key="BorderStyleGreen" TargetType="Border">
        <Setter Property="Stroke" Value="#00FF00" />
        <Setter Property="StrokeThickness"  Value="0" />
        <Setter Property="BackgroundColor" Value="White" />
    </Style>
    <Style x:Key="BorderStyleBlack" TargetType="Border">
        <Setter Property="Stroke" Value="Black" />
        <Setter Property="StrokeThickness"  Value="1" />
        <Setter Property="BackgroundColor" Value="White" />
    </Style>    
</ResourceDictionary>
