<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MauiAppToolkit.ViewModels"
             x:Class="MauiAppToolkit.Views.SpyMonitorPage"
             Title="Spy Monitor">

    <ContentPage.BindingContext>
        <viewModels:SpyMonitorViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles/StylesDebug.xaml" />
                <ResourceDictionary Source="../Resources/Styles/CustomStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <Grid 
        RowDefinitions="80,*,*,60,80"
        ColumnDefinitions="*"
        Margin="5"
        ColumnSpacing="5"
        RowSpacing="10">

        <Border Grid.Row="0" Style="{StaticResource BorderStyleBlue}"/>
        <Border Grid.Row="1" Style="{StaticResource BorderStyleRed}"/>
        <Border Grid.Row="2" Style="{StaticResource BorderStyleGreen}"/>
        <Border Grid.Row="3" Style="{StaticResource BorderStyleBlue}"/>

        <Label 
            Grid.Row="0"
            Text="Media Spy Status"
            FontSize="50"
            FontAttributes="Bold"
            HorizontalOptions="Center" />

        <StackLayout 
            Grid.Row="1"
            Orientation="Horizontal"
            HorizontalOptions="CenterAndExpand"
            Padding="10"
            Spacing="15">

            <Label 
                HeightRequest="45"
                VerticalOptions="Center"
                VerticalTextAlignment="Center"
                Text="Microphone's status: "
                />
            
            <Switch 
                x:Name="switchMicrophone"
                HeightRequest="45"
                Style="{StaticResource CustomSwitchStyle}"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                IsToggled="{Binding IsMicrophoneActive}"
                />
            
        </StackLayout>

        <StackLayout 
            Grid.Row="2"
            Orientation="Horizontal"
            HorizontalOptions="CenterAndExpand"
            Padding="10"
            Spacing="15">

            <Label 
                HeightRequest="45"
                VerticalOptions="Center"
                VerticalTextAlignment="Center"
                Text="Camera's status: "
                />
            
            <Switch 
                x:Name="switch"
                HeightRequest="45"
                VerticalOptions="CenterAndExpand"
                IsToggled="{Binding IsCameraActive}"
                />
        </StackLayout>

        <Label
            Grid.Row="3"
            Text="Switch is now False"
            FontSize="20"
            HorizontalOptions="Center"
            VerticalOptions="CenterAndExpand">
            <Label.Triggers>
                    
                <DataTrigger 
                    TargetType="Label"
                    Binding="{Binding Source={x:Reference switch}, Path=IsToggled}"
                    Value="True">
                    <Setter Property="Text" Value="Switch is now True" />
                </DataTrigger>
                    
            </Label.Triggers>
        </Label>
        
        <StackLayout
            Grid.Row="4"
            Spacing="5"
            Margin="10"
            Orientation="Horizontal">

            <Button
                HorizontalOptions="CenterAndExpand"
                Text="Check CameraStatus"
                FontSize="18"
                BorderWidth="2"
                Command="{Binding CheckCameraStatusCommand}"
                />

            <Button
                HorizontalOptions="CenterAndExpand"
                Text="Check Microphone"
                FontSize="18"
                BorderWidth="2"
                Command="{Binding CheckMicrophoneStatusCommand}"
                />
            
        </StackLayout>

    </Grid>
</ContentPage>